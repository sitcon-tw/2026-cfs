---
const { t } = Astro.props;
import IntroImg from "@assets/img/intro.webp";
---

<section id="hero">
	<div class="aos aos-fadeIn">
		<img class="aos aos-fadeIn" src="/2026/cfs/SITCON.svg" alt="" />
		<h2 class="aos aos-fadeZoom">{t.title}<br />{t.title2}</h2>
		<p class="aos aos-fadeIn">{t.subtitle}<br />{t.subtitle2}</p>
	</div>
	<img src={IntroImg.src} class="coverImg" />
</section>

<style>
	section {
		height: 100vh;
		text-align: center;
		padding: 1rem;
		color: var(--black);
	}

	section,
	div {
		display: flex;
		justify-content: center;
		align-items: center;
		flex-direction: column;
		gap: 1.75rem;
	}

	img {
		display: block;
	}

	h2 {
		font-size: 4rem;
		line-height: 1.2;
	}

	p.aos-fadeIn {
		font-size: 1.5rem;
		line-height: 1.33;
		transition-delay: 0.5s;
	}

	.aos-fadeIn {
		transition: opacity 2s ease-in-out;
	}

	.aos-fadeZoom {
		scale: 0.9;
		opacity: 0;
		transition: 2s ease;
	}

	.aos-fadeZoom.appeared {
		scale: 1;
		opacity: 1;
	}

	@media screen and (max-width: 50rem) {
		h2 {
			font-size: 3rem;
		}

		p.aos-fadeIn {
			font-size: 1.25rem;
		}
	}

	@media screen and (max-width: 36rem) {
		h2 {
			font-size: 2rem;
		}

		p.aos-fadeIn {
			font-size: 1rem;
		}
	}

	@media screen {
		.coverImg {
			display: none;
		}
	}

	@media print {
		section {
			height: unset;
		}

		#hero > div {
			margin-block: 60pt;
		}

		h2 {
			font-size: 32pt;
		}

		.aos-fadeZoom {
			scale: 1;
			opacity: 1;
		}

		.coverImg {
			display: block;
			height: 350pt;
			max-width: 100%;
			object-fit: cover;
		}
	}
</style>
